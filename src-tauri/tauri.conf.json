{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Cashonize",
  "version": "0.3.0",
  "identifier": "com.cashonize.wallet",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:9000",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist/spa"
  },
  "app": {
    "windows": [
      {
        "title": "Cashonize",
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
